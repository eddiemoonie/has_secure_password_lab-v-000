<%= form_for @user, controller: 'users', action: 'create' do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.textfield :password %>

  <%= f.label :password_confirmation %>
  <%= f.textfield :password_confirmation %>

  <%= f.submit "Create User" %>
<% end %>
